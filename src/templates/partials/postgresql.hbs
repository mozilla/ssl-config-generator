# {{output.header}}
# {{{output.link}}}
ssl = on

ssl_cert_file = '/path/to/signed_cert_plus_intermediates'
ssl_key_file = '/path/to/private_key'
{{#if output.usesDhe}}
  {{#if (minver "10.0.0" form.serverVersion)}}

# {{output.dhCommand}} > /path/to/dhparam
ssl_dh_params_file = '/path/to/dhparam'
  {{/if}}
{{/if}}
{{#if output.ciphers.length}}

ssl_ciphers = '{{{join output.ciphers ":"}}}'
{{/if}}
{{#if (minver "12.0.0" form.serverVersion)}}
ssl_min_protocol_version = '{{output.protocols.[0]}}'
{{/if}}
